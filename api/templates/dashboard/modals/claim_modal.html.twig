<!-- modals -->
<div class="modal fade" id="modalClaim" tabindex="-1" role="dialog" aria-labelledby="modalPaymentTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <!-- Close -->
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1" id="modalPaymentTitle">
                    {{ 'load data'|trans|capitalize }}
                </h2>
                <!-- Form -->
                <form method="post" action="{{ path('app_dashboard_claims') }}" enctype="multipart/form-data">
                    <!-- Name -->
                    <div class="form-group">
                        <!-- Select -->
                        <select class="custom-select custom-select-xs" data-choices>
                            <option value="" disabled selected hidden>Please Choose...</option>
                            <option>github</option>
                            <option>facebook</option>
                            <option>gmail</option>
                            <option>idin</option>
                        </select>
                    </div>
                    <!-- Submit -->
                    <button class="btn btn-block btn-primary mt-3 lift">
                        {{ 'retrieve data'|trans }}
                    </button>
                </form>

                <div style="padding-top: 2rem"></div>

                <!-- Heading -->
                <h2 class="font-weight-bold text-center mb-1" id="modalPaymentTitle">
                    {{ 'add manually'|trans|capitalize }}
                </h2>
                <!-- Form -->
                <form method="post" action="{{ path('app_dashboard_claims') }}" enctype="multipart/form-data">
                    <!-- Select -->
                    <select class="custom-select custom-select-xs" data-choices>
                        <option value="" disabled selected hidden>Please Choose...</option>
                        <option>naam</option>
                        <option>email</option>
                        <option>telefoonnummer</option>
                    </select>

                    <!-- Input -->
                    <div class="form-group">
                        <label for="name">{{ 'name'|trans|capitalize }} <span style="color: red; font-weight: bold">*</span></label>
                        <input required class="form-control" name="name" id="name" type="text" placeholder="{{ 'name'|trans|capitalize }}">
                    </div>
                    <!-- Submit -->
                    <button class="btn btn-block btn-primary mt-3 lift">
                        {{ 'retrieve data'|trans }}
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
