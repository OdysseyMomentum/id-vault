<!-- Card -->
<div class="card card-bleed border-bottom border-bottom-md-0 shadow-light-lg">

    <!-- Collapse -->
    <div class="collapse d-md-block" id="sidenavCollapse">
        <div class="card-body">

            <!-- Heading -->
            <h6 class="font-weight-bold text-uppercase mb-3">
                Account
            </h6>

            <!-- List -->
            <ul class="card-list list text-gray-700 mb-6">
                <li class="list-item {% if activeItem == 'general' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_general') }}">
                        General
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'security' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_security') }}">
                        Security
                    </a>
                </li>
                <li class="list-item">
                    <a class="list-link text-reset" href="{{ path('app_default_index') }}">
                        Notifications
                    </a>
                </li>
            </ul>

            <!-- Heading -->
            <h6 class="font-weight-bold text-uppercase mb-3">
                Wallet
            </h6>

            <!-- List -->
            <ul class="card-list list text-gray-700 mb-0">
                <li class="list-item {% if activeItem == 'claims' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_claims') }}">
                        Claims
                    </a>
                </li>
                <li class="list-item {% if activeItem == 'contracts' %}active{% endif %}">
                    <a class="list-link text-reset" href="{{ path('app_dashboard_contracts') }}">
                        Contracts
                    </a>
                </li>
            </ul>

        </div>
    </div>
</div>
