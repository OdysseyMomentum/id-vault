{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'dossiers' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg">
                    <div class="card-header">

                        <!-- Heading -->
                        <h4 class="mb-0">
                            {{ 'dossiers'|trans|capitalize }}
                        </h4>

                    </div>
                    <div class="card-body">
                        {% if dossiers is defined and dossiers is not empty %}
                            <div class="list-group list-group-flush">
                                {% for dossier in dossiers %}

                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="hint__title">{{ 'no dossiers available'|trans|capitalize }}</p>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
{% endblock %}
