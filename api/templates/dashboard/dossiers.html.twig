{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'dossiers' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg">
                    <div class="card-header">

                        <!-- Heading -->
                        <h4 class="mb-0">
                            {{ 'dossiers'|trans|capitalize }}
                        </h4>

                    </div>
                    <div class="card-body">
                        {% if dossiers is defined and dossiers is not empty %}
                            <div class="list-group list-group-flush">
                                {% for dossier in dossiers %}
                                    <div class="list-group-item">
                                        <!-- Header -->
                                        <div class="row mb-5">
                                            <div class="col">

                                                <!-- Heading -->
                                                <h4 class="mb-0">
                                                    {{ dossier.basis }}
                                                </h4>

                                                {% if dossier.endDate is defined and dossier.endDate is not empty %}
                                                    <!-- Text -->
                                                    <small class="text-gray-700">
                                                        {{ 'end date'|trans|capitalize }}: {{ dossier.endDate|date("d-m-Y", "Europe/Paris") }}
                                                    </small>
                                                {% endif %}

                                            </div>

                                            <div class="col-auto">

                                                <!-- Dropdown -->
                                                <div class="dropdown">
                                                    <a class="text-gray-400 text-decoration-none" data-toggle="dropdown" href="#" aria-expanded="false">
                                                        <i class="fe fe-more-vertical"></i>
                                                    </a>
                                                    <div class="dropdown-menu" style="">
                                                        <a class="dropdown-item" href="#">{{ 'view authorization'|trans|capitalize }}</a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="hint__title">{{ 'no dossiers available'|trans|capitalize }}</p>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
{% endblock %}
