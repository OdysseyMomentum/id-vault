{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'logs' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg mb-6">
                    <div class="card-header">

                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Heading -->
                                <h4 class="mb-0">
                                    {{ 'logs'|trans|capitalize }}
                                </h4>

                            </div>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                        {% if logs is defined and logs is not empty %}
                            {% for log in logs %}
                                <div class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                        {% if log.authorization.application.contact is defined %}
                                            {% set wrcApplication = commonground_resource(log.authorization.application.contact) %}
                                                {% if wrcApplication.style.favicon.base64 is defined %}
                                                    <!-- Avatar -->
                                                    <div class="avatar avatar-xl">
                                                        <img style="object-fit: fill" class="avatar-img" src="{{ wrcApplication.style.favicon.base64 }}" alt="...">
                                                    </div>
                                                {% endif %}
                                        {% endif %}
                                        </div>
                                        <div class="col ml-n5">
                                            <!-- Heading -->
                                            <p class="mb-0">
                                                {{ log.authorization.application.name }}
                                            </p>
                                        </div>
                                        <div class="col ml-n5">
                                            <!-- Heading -->
                                            <p class="mb-0">
                                                {% for scope in log.authorization.scopes %}
                                                    <span class="text-muted">{{ scope }}</span> <br>
                                                {% endfor %}
                                            </p>
                                        </div>
                                        <div class="col ml-n5">
                                            <!-- Heading -->
                                            <p class="mb-0 text-muted">
                                                {{ log.authorization.dateCreated|date('H:i:s, d-m-Y', 'Europe/Paris') }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
                </div>
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

{% endblock %}
