{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            <div class="col-12 col-md-3">

                {% set activeItem = 'organizations' %}
                {% include 'dashboard/sidenavbar.html.twig' %}

            </div>

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg mb-6">
                    <div class="card-header">

                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Heading -->
                                <h4 class="mb-0">
                                    {{ 'organizations'|trans|capitalize }}
                                </h4>

                            </div>
                            <div class="col-auto">

                                <!-- Button -->
                                <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#modalOrganization">
                                    {{ 'add new'|trans|capitalize }}
                                </button>

                            </div>
                        </div>

                    </div>
                    <div class="card-body">

                        {% if resources is defined and resources is not empty %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">{{ 'name'|trans|capitalize }}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for resource in resources %}
                                    <tr>
                                        <td>{{ resource.name }}</td>
                                        <td style="text-align: end"><a class="btn btn-xs btn-primary" href="">Open</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="hint__title">{{ 'no organizations available'|trans|capitalize }}</p>
                        {% endif %}

                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

    <!-- modals -->
    {% include '/dashboard/modals/add-organization-modal.html.twig' %}

{% endblock %}
