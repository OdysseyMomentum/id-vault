{% extends 'dashboard/dashboard.html.twig' %}

{% block pageContent %}
    <div class="container-md">
        <div class="row">
            {#            <div class="col-12 col-md-3">#}

            {#                {% set activeItem = 'claims' %}#}
            {#                {% include 'dashboard/sidenavbar.html.twig' %}#}

            {#            </div>#}

            {# TODO:Include the sidenavbar and/or add a back link? #}

            <div class="col-12 col-md-9">

                <!-- Card -->
                <div class="card card-bleed shadow-light-lg mb-6">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">

                                <!-- Heading -->
                                <h4 class="mb-0">
                                    {{ 'claim'|trans|capitalize~' '~'for'|trans~' '~resource.property }}
                                </h4>

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if resource|default %}

                            <!-- Heading -->
                            <h4 class="mb-0">
                                {% if resource.data is defined and resource.data is not empty %}
                                    {% for dataItem in resource.data %}
                                        {% if loop.last %}
                                            {{ dataItem }}
                                        {% else %}
                                            {{ dataItem }},
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </h4>

                        {% endif %}

                    </div>
                </div>

            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->

{% endblock %}
