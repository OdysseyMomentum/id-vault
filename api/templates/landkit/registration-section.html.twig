                <div class="card shadow-light-lg lift lift-lg">
                   <!-- Body -->
                    <div class="card-body">
                        <!-- Form -->
                        <form action="{{ path('app_default_register') }}">
                            <div class="form-label-group">
                                <input type="email" class="form-control form-control-flush" id="cardEmail" placeholder="{{ 'email'|trans|capitalize }}">
                                <label for="cardEmail">{{ 'email'|trans|capitalize }}</label>
                            </div>
                            <div class="form-label-group">
                                <input type="password" class="form-control form-control-flush" id="cardPassword" placeholder="{{ 'password'|trans|capitalize }}">
                                <label for="cardPassword">{{ 'password'|trans|capitalize }}</label>
                            </div>
                            <div class="mt-6">
                                <button class="btn btn-block btn-success lift" type="submit">
                                    {{ 'register'|trans|capitalize }}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- / .row -->
